{
  "name": "markdown-preview-selection-sync",
  "displayName": "Markdown Preview Selection Sync",
  "description": "Synchronizes text selection from Markdown preview to source editor - perfect for AI assistants",
  "version": "0.1.0",
  "publisher": "alexzanfir",
  "author": {
    "name": "Alexander Zanfir"
  },
  "license": "MIT",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/AlexZan/markdown-preview-selection-sync.git"
  },
  "bugs": {
    "url": "https://github.com/AlexZan/markdown-preview-selection-sync/issues"
  },
  "homepage": "https://github.com/AlexZan/markdown-preview-selection-sync#readme",
  "keywords": [
    "markdown",
    "preview",
    "selection",
    "sync",
    "claude",
    "ai",
    "assistant"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "markdown.previewScripts": [
      "./media/preview-selection.js"
    ],
    "markdown.markdownItPlugins": true,
    "configuration": {
      "title": "Markdown Preview Selection Sync",
      "properties": {
        "markdownPreviewSelectionSync.requireModifierKey": {
          "type": "boolean",
          "default": false,
          "description": "Require holding a modifier key (Ctrl/Cmd) while selecting text to trigger sync. When enabled, normal text selection works without syncing."
        },
        "markdownPreviewSelectionSync.modifierKey": {
          "type": "string",
          "enum": ["ctrl", "alt", "meta"],
          "default": "ctrl",
          "description": "Which modifier key to use when requireModifierKey is enabled. 'meta' is Cmd on Mac, Windows key on Windows/Linux."
        },
        "markdownPreviewSelectionSync.maxSearchLines": {
          "type": "number",
          "default": 50,
          "description": "Maximum number of lines to search when finding multi-line selections."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.x",
    "@typescript-eslint/parser": "^6.x",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^8.x",
    "mocha": "^11.7.5",
    "typescript": "^5.3.0"
  }
}
